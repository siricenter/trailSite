<h2>Sport Route Photo</h2>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @sport_route_photo.title %>
</p>

<p>
  <strong>Sport route:</strong>
  <%= if @sport_route_photo.sport_route != nil then @sport_route_photo.sport_route.name else "Deleted, please re-select" end %>
</p>

<p>
  <strong>Image:</strong></br>
    <div>
        <image class="image_thumbnail" src="<%= @sport_route_photo.url %>"/>
    </div>
    <div>
        <span class='zoom' id='ex1'>
		    <img class="image_thumbnail" src="<%= @sport_route_photo.url %>"/>
		    <p>Hover</p>
        </span>
    </div>
</p>

<%= link_to 'Edit', edit_sport_route_photo_path(@sport_route_photo) %> |
<%= link_to 'Back', sport_route_path(@sport_route_photo.sport_route) %>
