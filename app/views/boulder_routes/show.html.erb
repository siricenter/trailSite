<h2>Boulder Route</h2>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @boulder_route.name %>
</p>

<p>
  <strong>Wall:</strong>
  <%= if @boulder_route.wall
        link_to @boulder_route.wall.name, wall_path(@boulder_route.wall) 
      else 
        "Deleted, please re-select" 
      end %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @boulder_route.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @boulder_route.longitude %>
</p>

<p>
  <strong>Zoom:</strong>
  <%= @boulder_route.zoom %>
</p>

<p>
  <strong>Description:</strong>
  <%= @boulder_route.description %>
</p>

<p>
  <strong>Directions:</strong>
  <%= @boulder_route.directions %>
</p>

<p>
  <strong>Danger rating:</strong>
  <%= @boulder_route.danger_rating %>
</p>

<p>
  <strong>Stars:</strong>
  <%= if (@boulder_route.stars && @boulder_route.stars >= 1 && @boulder_route.stars <= 5)
				@boulder_route.stars
			else
				"Not yet rated"
			end%>
</p>

<p>
  <strong>Pads:</strong>
  <%= @boulder_route.pads %>
</p>

<p>
  <strong>Grade:</strong>
  <%= if @boulder_route.grade
        link_to @boulder_route.wall.name, wall_path(@boulder_route.wall) 
      else 
        "Deleted, please re-select" 
      end %>
</p>

<p>
  <strong>Length:</strong>
  <%= @boulder_route.length %>
</p>

<br>
<%= render 'static/googleMap' %>
<br>

<button onclick="calcRoute()">
    Get Directions
</button>
<br>

<strong>Photos</strong> | <%= link_to 'Add Photo', new_boulder_route_photo_path(id: @boulder_route.id.to_s) %>
<%= render 'boulder_route_photos/table' %>
<br>
<strong>Videos</strong> | <%= link_to 'Add Video', new_boulder_route_video_path(id: @boulder_route.id.to_s) %>
<%= render 'boulder_route_videos/table' %>
<br>

<%= link_to 'Edit', edit_boulder_route_path(@boulder_route) %> |
<%= link_to 'Back', boulder_routes_path %>
