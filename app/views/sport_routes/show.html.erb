<h2>Sport Route</h2>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @sport_route.name %>
</p>

<p>
  <strong>Wall:</strong>
  <%= if @sport_route.wall
        link_to @sport_route.wall.name, wall_path(@sport_route.wall) 
      else 
        "Deleted, please re-select" 
      end %>
</p>

<p>
  <strong>Length:</strong>
  <%= @sport_route.length %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @sport_route.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @sport_route.longitude %>
</p>

<p>
  <strong>Zoom:</strong>
  <%= @sport_route.zoom %>
</p>

<p>
  <strong>Danger rating:</strong>
  <%= @sport_route.danger_rating %>
</p>

<p>
  <strong>Bolts:</strong>
  <%= @sport_route.bolts %>
</p>

<p>
  <strong>Stars:</strong>
  <%= if (@sport_route.stars && @sport_route.stars >= 1 && @sport_route.stars <= 5)
				@sport_route.stars
			else
				"Not yet rated"
			end %>
</p>

<p>
  <strong>Pitches:</strong>
  <%= @sport_route.pitches %>
</p>

<p>
  <strong>Grade:</strong>
  <%= if @sport_route.grade
        @sport_route.grade.usa
      else 
        "Deleted, please re-select" 
      end %>
</p>

<p>
  <strong>Anchor:</strong>
  <%= @sport_route.anchor %>
</p>


<p>
  <strong>Description:</strong>
  <%= @sport_route.description %>
</p>

<p>
  <strong>Directions:</strong>
  <%= @sport_route.directions %>
</p>

<br>
<%= render 'static/googleMap' %>
<br>

<button onclick="calcRoute()">
    Get Directions
</button>
<br>

<strong>Photos</strong> |<%= link_to 'Add Photo', new_sport_route_photo_path(id: @sport_route.id.to_s) %> |
<%= render "sport_route_photos/table" %>
<br>
<strong>Videos</strong> | <%= link_to 'Add Video', new_sport_route_video_path(id: @sport_route.id.to_s) %>
<%= render 'sport_route_videos/table' %>
<br>

<%= link_to 'Edit', edit_sport_route_path(@sport_route) %> |
<%= link_to 'Back', sport_routes_path %>
